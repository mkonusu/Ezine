# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                               controllers.Application.index
GET         /search/:topic                                  controllers.SearchController.search(topic)
GET         /Callback                                       controllers.Application.callbackHandler()
GET         /channel/list                                   controllers.ChannelController.listChannels()

GET         /languages                                      controllers.SetupController.languages()
GET         /user/:userId/language/:langCode/subscribe      controllers.SetupController.subscribeLanguage(userId, langCode)
GET         /user/:userId/language/:langCode/unsubscribe    controllers.SetupController.unsubscribeLanguage(userId, langCode)

POST        /verify                                         controllers.UserController.verify()
POST        /register                                       controllers.UserController.register()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                               controllers.Assets.at(path="/public", file)

    